---
import BaseLayout from "./base.astro";

import Content from "../components/Content.astro";

import agenda, { formatDay } from "../js/agenda";

// Convert import.meta.glob to array format matching old Astro.glob output
const agendaFiles = import.meta.glob('../pages/activiteiten/agenda/**/*.md', { eager: true });
const allItems = Object.entries(agendaFiles).map(([path, module]: [string, any]) => ({
	...module,
	url: path.replace('../pages', '').replace('.md', ''),
}));

const upcoming3Months = agenda(allItems);

const { frontmatter } = Astro.props;
---

<BaseLayout title={frontmatter?.title}>
	<Content title={frontmatter?.title} visual={frontmatter?.visual}>
		<slot />

		{
			upcoming3Months.map((month) => (
				<div class="agenda">
					<h2 class="agenda__month">{month.date}</h2>

					{month.data.length ? (
						<ul class="agenda__list">
							{month.data.map((activity) => (
								<li class="agenda__list-item">
									<a href={activity.url} class="agenda__link">
										<div class="agenda__date text-center">
											<div class="agenda__date-number">
												{formatDay(activity.url as string).numeric}
											</div>
											<div class="agenda__date-day">
												{formatDay(activity.url as string).short}
											</div>
										</div>

										<div class="agenda__description">
											<span class="agenda__title">
												{activity.frontmatter.title}
											</span>

											{activity.frontmatter.time ? (
												<small class="text-muted">
													{activity.frontmatter.time}
												</small>
											) : (
												""
											)}
										</div>
									</a>
								</li>
							))}
						</ul>
					) : (
						<ul class="agenda__list">
							<li class="agenda__list-item">
								<div class="agenda__no-items">
									Op dit moment zijn er nog geen activiteiten bekend.
								</div>
							</li>
						</ul>
					)}
				</div>
			))
		}
	</Content>
</BaseLayout>

<style>
	.agenda {
		background-color: var(--color-white);
		border-radius: 4px;
		box-shadow: 0 10px 25px -22px var(--color-true-black);
	}

	.agenda + .agenda {
		margin-top: 2rem;
	}

	.agenda__list {
		margin: 0;
		padding: 0;

		list-style: none;
	}

	.agenda__list-item:not(:last-child) .agenda__link {
		border-bottom: 1px solid var(--color-gray-light);
	}

	.agenda__date {
		margin-right: 1rem;
	}

	.agenda__date-number {
		color: var(--color-black);
		font-size: var(--font-size-xl);
		line-height: 1.25;
	}

	.agenda__date-day {
		color: var(--color-black);
		font-variant: small-caps;
		line-height: 1;
	}

	.agenda__month {
		margin: 0;
		padding: 1rem;

		text-transform: capitalize;

		border-bottom: 2px solid var(--color-gray-light);
	}

	.agenda__description {
		width: 100%;

		padding: 0 0 0 1rem;
	}

	.agenda__title {
		display: block;

		font-weight: bold;
	}

	.agenda__link {
		display: block;
		display: flex;
		align-items: center;

		width: 100%;

		padding: 1rem;

		color: var(--color-black);
		text-decoration: none;

		&.is-today,
		&:hover {
			border-left: 4px solid var(--color-yellow);

			.agenda__date-number,
			.agenda__date-day,
			.agenda__title,
			.text-muted {
				color: var(--color-yellow);
			}
		}

		&.is-today:hover {
			border-left-color: var(--color-pink);

			.agenda__date-number,
			.agenda__date-day,
			.agenda__title,
			.text-muted {
				color: var(--color-pink);
			}
		}
	}

	.agenda__no-items {
		padding: 1rem;
	}
</style>
