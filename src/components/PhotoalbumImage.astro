---
import { Image } from "astro:assets";

export type Props = {
	src: string;
	width?: number;
	alt?: string;
};

const { src, width = 800, alt = "" } = Astro.props;
const images = import.meta.glob<ImageMetadata>(
	["../pages/fotoalbums/**/*.jpg", "../pages/fotoalbums/**/*.jpeg"],
	{ import: "default" }
);
const imagesrc = await images[src]();
---

<Image src={imagesrc} width={width} alt={alt} />
