---
layout: content
---

{{ content | safe }}

{% for activity in activities %}
<div class="activities">
	<h2 class="activities__day">{{ activity.day }}</h2>

	<ol class="activities__list">
		{% for part in activity.parts %}
			<li class="activities__list-item">
				<div class="activities__part">
					{{ part.name }}
				</div>

				<div class="activities__tags">
				{% for act in part.activities %}
					<div class="activities__tag">
						{% if act.url %}
							<a href="{{ "/" | url }}{{ act.url }}">{{ act.name }}</a>
						{% else %}
							{{ act.name }}
						{% endif %}
					</div>
				{% endfor %}
				</div>
			</li>
		{% endfor %}
	</ol>
</div>
{% endfor %}
